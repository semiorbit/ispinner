{
  "name": "@semiorbit/ispinner",
  "version": "1.0.30",
  "description": "A simple react spinner like iOS UIActivityIndicatorView.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semiorbit/ispinner.git"
  },
  "keywords": [
    "ISpinner",
    "spinner",
    "loading",
    "ios spinner",
    "indicator",
    "UIActivityIndicatorView"
  ],
  "author": "Ibrahim Khalil Khalbous",
  "license": "MIT",
  "files": [
    "./lib"
  ],
  "scripts": {
    "build": "npm run v && npm i && rollup -c",
    "v": "npm version patch --force && cd lib && npm version patch --force",
    "publish": "npm publish --access public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.13.13",
    "@rollup/plugin-babel": "^6.0.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "react-scripts": "5.0.1",
    "rollup": "^2.44.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "postcss": "^8.4.31",
    "sass": "^1.68.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "prop-types": ">=15.7.2"
  }
}
